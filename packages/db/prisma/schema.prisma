generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  username     String
  provider     String
  password     String?
  avatar       String         @default("bob")

  Space        Space[]        @relation("CreatedSpaces")
  joinedSpaces Space[]        @relation("JoinedSpaces")
}

model Maps {
  id           String         @id @default(uuid())
  mapid        String         @unique          // You forgot a default value for id
  name         String         @unique
  createdAt    DateTime       @default(now())
  mapPath      String
  imagePath    String
  width        Int
  height       Int
  Space        Space?         @relation()
}

model Space {
  id              String     @id @default(cuid())
  name            String
  createAt        DateTime   @default(now())
  maxParticipants Int?
  type            Spacetype  @default(public)
  code            String?
  adminId         String
  admin           User       @relation("CreatedSpaces", fields: [adminId], references: [id])
  
  map             Maps       @relation(fields: [mapId], references: [id])
  mapId           String     @unique

  participants    User[]     @relation("JoinedSpaces")
}

model VerificationEmail {
  id         String             @id @default(uuid())
  email      String          @unique
  code       String
  expireAt   DateTime
} 

enum Spacetype {
    private
    public 
    invite_only 
}

